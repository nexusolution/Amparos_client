/* Header Content */
.header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16px;
}

.header-actions {
  display: flex;
  gap: 12px;
}

.page-subtitle {
  font-size: 14px;
  color: #6b7280;
  margin-top: 4px;
}

/* Form Grid */
.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-label {
  font-size: 14px;
  font-weight: 500;
  color: #374151;
}

.required {
  color: #ef4444;
}

.form-control-modern {
  width: 100%;
  padding: 10px 14px;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  font-size: 14px;
  transition: all 0.2s;
  background-color: white;
}

.form-control-modern:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-control-modern:disabled {
  background-color: #f3f4f6;
  cursor: not-allowed;
  color: #6b7280;
}

.form-control-modern.is-invalid {
  border-color: #ef4444;
}

.form-control-modern.is-invalid:focus {
  border-color: #ef4444;
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

.invalid-feedback {
  color: #ef4444;
  font-size: 12px;
  margin-top: 4px;
}

/* Checkbox Styles */
.form-check-modern {
  display: flex;
  align-items: center;
  padding-top: 8px;
}

.form-check-input-modern {
  width: 18px;
  height: 18px;
  margin-right: 8px;
  cursor: pointer;
}

.form-check-label-modern {
  font-size: 14px;
  color: #374151;
  cursor: pointer;
  user-select: none;
}

/* Add Form Section */
.add-form-section {
  background-color: #f9fafb;
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  border: 2px dashed #d1d5db;
}

/* Empty List */
.empty-list {
  text-align: center;
  padding: 40px 20px;
}

.empty-list .text-muted {
  font-size: 14px;
  color: #6b7280;
  margin: 0;
}

/* Table Styles */
.table-responsive {
  overflow-x: auto;
  margin-top: 16px;
}

.modern-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
}

.modern-table thead {
  background-color: #f9fafb;
  border-bottom: 2px solid #e5e7eb;
}

.modern-table th {
  padding: 12px 16px;
  text-align: left;
  font-weight: 600;
  color: #374151;
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  white-space: nowrap;
}

.modern-table tbody tr {
  border-bottom: 1px solid #e5e7eb;
  transition: background-color 0.2s;
}

.modern-table tbody tr:hover {
  background-color: #f9fafb;
}

.modern-table td {
  padding: 14px 16px;
  color: #1f2937;
  vertical-align: middle;
}

/* Actions Column */
.actions-column {
  width: 80px;
  text-align: center;
}

.btn-action {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  padding: 0;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  background-color: transparent;
}

.btn-action svg {
  width: 16px;
  height: 16px;
}

.btn-delete {
  color: #ef4444;
}

.btn-delete:hover {
  background-color: #fef2f2;
  color: #dc2626;
}

/* Loading Container */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
  min-height: 400px;
}

.loading-spinner {
  width: 48px;
  height: 48px;
  border: 4px solid #f3f4f6;
  border-top: 4px solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Form Actions */
.form-actions-container {
  position: sticky;
  bottom: 0;
  z-index: 10;
  margin-top: 24px;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
}

/* Button Small */
.btn-sm {
  padding: 8px 16px;
  font-size: 13px;
}

.btn-sm .btn-icon-modern {
  width: 16px;
  height: 16px;
}

/* Button Spinner */
.btn-spinner {
  display: inline-block;
  width: 16px;
  height: 16px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top: 2px solid white;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 8px;
  vertical-align: middle;
}

/* Card Header Modern */
.card-header-modern {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 32px;
  border-bottom: 1px solid #e5e7eb;
}

.card-title-modern {
  font-size: 18px;
  font-weight: 600;
  color: #111827;
  margin: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
  .header-content {
    flex-direction: column;
    align-items: stretch;
  }

  .header-actions {
    flex-direction: column;
  }

  .header-actions button {
    width: 100%;
  }

  .form-grid {
    grid-template-columns: 1fr;
  }

  .add-form-section {
    padding: 16px;
  }

  .card-header-modern {
    flex-direction: column;
    align-items: stretch;
    gap: 12px;
  }

  .card-header-modern button {
    width: 100%;
  }

  .form-actions {
    flex-direction: column;
  }

  .form-actions button {
    width: 100%;
  }
}

@media (max-width: 640px) {
  .modern-table {
    font-size: 12px;
  }

  .modern-table th,
  .modern-table td {
    padding: 10px 12px;
  }
}
